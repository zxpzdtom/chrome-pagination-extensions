{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2016",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
